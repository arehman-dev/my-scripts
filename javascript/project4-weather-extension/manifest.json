{
  "name": "Islamabad Weather",
  "description": "An extension that shows Islamabad's current weather.",
  "version": "0.1",
  "manifest_version": 3,
  "action": {
    "default_popup": "./popup.html",
    "default_icon": "./icon128.png"
  },
  "icons": {
    "16": "./icon16.png",
    "48": "./icon48.png",
    "128": "./icon128.png"
  },
  "permissions": [
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}