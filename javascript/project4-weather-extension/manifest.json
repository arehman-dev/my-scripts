{
  "manifest_version": 2,
  "name": "Weather Extension",
  "version": "0.2",
  "description": "A weather extension that shows Islamabad's current weather for Chrome and Firefox.",
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon48.png"
    }
  },
  "permissions": [
    "tabs",
    "https://api.weatherapi.com/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "applications": {
    "gecko": {
      "id": "weatherextension@none.com",
      "strict_min_version": "131.0"
    }
  }
}