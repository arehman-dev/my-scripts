{
    "name": "speak & search",
    "version": "1.0",
    "description": "An accessebility tool to speak selected text & Search wikipedia in popup upon request.",
    "manifest_version": 2,
    "icons": {
        "16": "/icons/icon16.png",
        "48": "/icons/icon48.png",
        "128": "/icons/icon128.png"
    },
    "background": {
        "scripts": [
            "eventpage.js"
        ],
        "persistent": false
    },
    "permissions": [
        "tabs",
        "tts",
        "contextMenus"
    ]
}